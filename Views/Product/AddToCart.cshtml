@model List<OnlineShopping.Models.CartItem>

@{
    ViewBag.Title = "AddToCart";
    Layout = "~/Views/User/UserLayoutPage.cshtml";
}

<html>
<head>
    <title>Add to Cart</title>
</head>
<body>
    <h1>Add Items to Cart</h1>

    <table>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.productID</td>
                <td>@item.productName</td>
                <td>@item.Price</td>
                <td>@item.stockQuantity</td>
            </tr>
        }
    </table>

    <p>Cart Item Count: @Model.Count</p>

</body>
</html>
